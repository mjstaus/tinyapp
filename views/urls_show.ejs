<%-include("partials/_header")%>

<div class="container">
  <div class="row">
    <div class="card text-center col-6 offset-3 mt-3">
      <div class="card-header"></div>
      <div class="card-body">
        <h5 class="card-title">TinyURL for: <%= longURL %></h5>
        <p class="card-text">
          Short URL: <a href="/u/<%= shortURL %>"><%= shortURL %></a>
        </p>
      </div>
      <div class="card-footer text-muted">
        <h3 class="card-title">EDIT</h3>
        <form class="form-inline" name="longURL" method="POST" action="/urls/<%=shortURL%>?_method=PUT">
          <div class="form-group">
            <label for="longURL">New URL:</label>
            <input
              class="form-control"
              type="text"
              name="longURL"
              placeholder="<%=longURL%>"
              style="width: 300px; margin: 1em"
            />
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>

      <div class="card-body text-muted">
        <h3 class="card-title">DELETE</h3>
        <form name="delete" method="POST" action="/urls/<%=shortURL%>?_method=DELETE">
          <button class="btn btn-danger">DELETE</button>
        </form>

      </div>
    </div>
  </div>
</div>

<%-include("partials/_footer")%>
  
